{% extends "base.html.jinja" %}

{% block content %}
  <!-- Main Content -->
  <div class="dropdown">
    <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
      Dropdown button
    </button>
    <ul class="dropdown-menu">
      {% for department_tree in tree_list %}
        <li>
          <a class="dropdown-item" href="#"
             data-hx-get="{{ url_for('company_structure.org_chart', root_id=department_tree.root.id) }}"
             data-hx-target=".chart-container"
             data-hx-swap="outerHTML"
          >
            {{ department_tree.root.title }}
          </a>
        </li>
      {% endfor %}
    </ul>
  </div>

  <div class="chart-container"></div>

  <div class="toast-container top-0 end-0 p-3" id="toast-container"></div>

  <div class="row">
    <!-- Dashboard cards -->
    <div class="col-md-6 col-xl-3">
      <div class="card">
        <!-- Card content -->
      </div>
    </div>
    
    <!-- Charts and tables -->
    <div class="col-md-12 col-xl-8">
      <!-- Chart content -->
    </div>
  </div>

  <div id="modals-here"
    class="modal modal-blur fade"
    style="display: none"
    aria-hidden="false"
    tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content"></div>
    </div>
  </div>

{% endblock %}

{% block scripts %}
  <!-- Org Chart dependencies -->
  <script src="https://d3js.org/d3.v7.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/d3-org-chart@3"></script>
  <script src="https://cdn.jsdelivr.net/npm/d3-flextree@2.1.2/build/d3-flextree.js"></script>
  <script src="/scripts/company_structure_tree.js"></script>
{% endblock %}